[flake8]
max-line-length = 100
extend-ignore = 
    # E203: whitespace before ':' (conflicts with black)
    E203,
    # W503: line break before binary operator (conflicts with black)
    W503,
    # F401: imported but unused (common in __init__.py files)
    F401,
    # E402: module level import not at top of file (needed for some imports)
    E402,
    # F811: redefinition of unused imports (common in conditional imports)
    F811,
    # F841: local variable assigned but never used (common in tests)
    F841
exclude = 
    .git,
    __pycache__,
    .mypy_cache,
    .pytest_cache,
    .venv,
    venv,
    build,
    dist,
    node_modules
per-file-ignores =
    # Allow unused imports in __init__.py files
    __init__.py:F401
    # Allow long lines and other issues in test files
    test_*.py:E501,F841,E402
    # Allow very long lines in docstrings for ai_generator.py
    backend/ai_generator.py:E501